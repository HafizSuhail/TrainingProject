@model Stanford_University.BusinessEntities.Student

@using Stanford_University.BusinessEntities

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_MainLayout";
}

<div class="container-fluid">

    <div class="row">

        <div class="col-md-4">
            <div class="card mb-4">
                <img src="~/css/Images/studentavatar.png" class="card-img-top" alt="Student Avatar">
                <div class="card-body">
                    <h4 class="card-title">@Model.StudentName</h4>
                    <p class="card-text">Roll No: @Model.RollNo</p>
                    <p class="card-text">Mob No: @Model.MobileNumber</p>
                </div>
                
            </div>
            @if (User.IsInRole(Roles.Admin))
            {
                <div class="float-end">
                    <a class="btn btn-secondary " asp-action="StudentList">Back</a>
                </div>
            }
            
            
        </div>

        <div class="col-md-8">

            <!-- Nav Tabs -->
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="overview-tab" data-bs-toggle="tab" href="#overview" role="tab" aria-controls="overview" aria-selected="true">Overview</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="courses-tab" data-bs-toggle="tab" href="#courses" role="tab" aria-controls="courses" aria-selected="false">Courses</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="account-tab" data-bs-toggle="tab" href="#account" role="tab" aria-controls="account" aria-selected="false">Account</a>
                </li>
                <!-- Add more tabs as needed -->
            </ul>

           
            

            <!-- Tab Content -->
            <div class="tab-content" id="myTabContent">

                <!-- Overview Tab Pane -->
                <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
                    <h4>Name</h4>
                    <p>@Model.StudentName</p>
                    <h4>Current Course</h4>
                    <p>@Model.Course?.Title</p>
                    <h4>Date Of Birth</h4>
                    <p>@Model.Dob.ToString("dd/MM/yyyy")</p>
                    <h5>Email</h5>
                    <p>@Model.Email</p>
                    <h5>Mobile No</h5>
                    <p>@Model.MobileNumber</p>
                </div>

                <!-- Courses Tab Pane -->
                <div class="tab-pane fade" id="courses" role="tabpanel" aria-labelledby="courses-tab">
                    <h3>Courses Enrollments</h3>
                    <p>@Model.Course?.Title</p>
                    @*<p>List of student courses goes here...</p>*@
                </div>

                <!-- User Accounts Tab Pane -->
                <div class="tab-pane fade" id="account" role="tabpanel" aria-labelledby="account-tab">

                    @if (Model.User != null)
                    {
                        <h2>Username</h2>
                        <p>@Model.User.UserName</p>

                        <h2>Email</h2>
                        <p>@Model.User.Email</p>

                        <h2>Password</h2>
                        <p>@Model.User.Password</p>
                    }
                    else
                    {
                        <a href="#" class="btn btn-primary">Create Account</a>
                    }

                </div>
                <!-- Add more tab panes for additional content -->
            </div>
            
           


        </div>
        <div class="mt-0 float-end">
            
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/popper.js"></script>